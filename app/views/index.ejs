<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>TinyURL - Shorten Your Link</title>

    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>

    <style>
        body {
            font-family: 'Poppins', sans-serif;
        }
    </style>

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">

    <!-- FontAwesome Icons -->
    <script src="https://kit.fontawesome.com/a2e860f6ac.js" crossorigin="anonymous"></script>
    <!-- FontAwesome CDN -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
        integrity="sha512-DTOQO9RWCH3ppGqcWaEA1B6fNnUjQnN/SUXOc6Bx/OVC5XbkqVKgfYk5dY6w5xN6GpXG9z4Aet6u1dZqf3rYpg=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />

</head>

<body
    class="bg-gradient-to-br from-indigo-600 via-purple-600 to-pink-500 min-h-screen flex items-center justify-center py-10">

    <!-- Container -->
    <div class="w-full max-w-3xl mx-auto text-center px-6">

        <!-- Hero Text -->
        <h1 class="text-4xl md:text-5xl font-bold text-white drop-shadow-lg mb-6">
            TinyURL <span class="text-yellow-300">URL Shortener</span>
        </h1>
        <p class="text-white text-lg opacity-85 mb-10">
            Paste your long URL below and convert it into a short, easy-to-share link instantly.
        </p>

        <!-- Long URL Input + Button -->
        <form id="shortenForm" class="flex gap-3 mb-4">
            <input type="url" name="longUrl" required placeholder="Enter your long URL here..."
                class="flex-1 px-5 py-4 rounded-2xl bg-white shadow-lg outline-none text-gray-700 text-lg focus:ring-4 focus:ring-yellow-300" />

            <button type="submit"
                class="px-7 py-4 rounded-2xl bg-yellow-400 hover:bg-yellow-500 transition-all text-gray-900 font-semibold text-lg shadow-xl">
                Shorten
            </button>
        </form>

        <!-- Custom short code input -->
        <input type="text" name="customCode" placeholder="Custom short code (optional, e.g., docs, abhi123)"
            class="w-full px-5 py-4 rounded-2xl bg-white shadow-lg outline-none text-gray-700 text-lg mb-10 focus:ring-4 focus:ring-yellow-300" />

        <!-- OUTPUT SHORT LINK SECTION -->
        <div id="resultBox"
            class="hidden border-4 border-dashed border-white/60 rounded-xl px-6 py-6 text-center bg-white/10 backdrop-blur-md shadow-xl">
            <p class="text-white text-xl font-semibold mb-3">Your Shortened URL:</p>

            <div class="flex items-center justify-center gap-4">
                <span id="shortUrlText" class="text-yellow-300 text-2xl font-bold tracking-wide"></span>

                <button onclick="copyUrl()" title="Copy to clipboard"
                    class="text-white text-2xl hover:text-yellow-300 transition-all">
                    <i id="copyIcon" class="fa-solid fa-copy"></i>
                </button>
            </div>

            <p id="copiedMsg" class="text-green-300 mt-2 hidden">Copied!</p>
        </div>
    </div>

    <!-- JavaScript -->
    <script>
        // Copy functionality
        function copyUrl() {
            const text = document.getElementById("shortUrlText").innerText;
            navigator.clipboard.writeText(text).then(() => {
                document.getElementById("copiedMsg").classList.remove("hidden");

                // Icon change animation
                const icon = document.getElementById("copyIcon");
                icon.classList.replace("fa-copy", "fa-check");

                setTimeout(() => {
                    document.getElementById("copiedMsg").classList.add("hidden");
                    icon.classList.replace("fa-check", "fa-copy");
                }, 1000);
            });
        }

        // Form Handler with fetch API
        const form = document.getElementById("shortenForm");
        form.addEventListener("submit", async (e) => {
            e.preventDefault();

            const longUrl = document.querySelector("input[name='longUrl']").value;
            const customCode = document.querySelector("input[name='customCode']").value;

            try {
                const response = await fetch("https://tiny-link-omega-three.vercel.app/api/v1/link", {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify({
                        longurl: longUrl,
                        code: customCode
                    })
                });

                const data = await response.json();

                let finalUrl = "";
                if (data._isExists) {
                    finalUrl = data.suggestedCode;
                } else {
                    finalUrl = `https://tiny-link-omega-three.vercel.app/${data.shortCode}`;
                }

                document.getElementById("shortUrlText").innerText = finalUrl;
                document.getElementById("resultBox").classList.remove("hidden");

            } catch (error) {
                console.error("Error:", error);
                alert("Something went wrong. Try again!");
            }
        });
    </script>

</body>

</html>